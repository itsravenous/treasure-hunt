html, body {
	height: 100%;
	margin: 0; padding: 0;
}
body {
	-webkit-perspective: 1000;
	border: 2px solid red;
}

.button {
	display: inline-block;
	padding: 5px 10px;
	border-radius: 3px;
	background: #2ba000;
}

.message {
	position: absolute;
	left: 0; top: 0; right: 0; bottom: 0;
	background: yellow;
	opacity: 0;
	-webkit-transition: opacity 0.5s;
}
.message.is-shown {
	opacity: 1;
	z-index: 999;
}

.ball {
	position:absolute;
	width:20px;
	height:20px;
	border-radius:50px;
	-webkit-border-radius:50px;
	background-color:#00f
}
.ball.potted {
	background-color: red;
}

.hole {
	position:absolute;
	width:55px;
	height:55px;
	border-radius:55px;
	-webkit-border-radius:55px;
	background-color:#333
}
